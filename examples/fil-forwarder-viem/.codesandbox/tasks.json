{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["pnpm install"],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "pnpm install",
      "restartOn": {
        "files": ["package.json", "pnpm-lock.yaml"],
        "branch": true
      }
    },
    "dev": {
      "name": "Run Dev Server",
      "command": "pnpm dev",
      "runAtStart": true
    },
    "test": {
      "name": "Run Tests",
      "command": "pnpm test"
    }
  }
}
