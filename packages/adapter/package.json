{
  "name": "filsnap-adapter",
  "version": "0.0.1",
  "description": "Adapter for installing Filsnap",
  "license": "(Apache-2.0 AND MIT)",
  "author": "Protocol Labs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git",
    "directory": "packages/adapter"
  },
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/adapter",
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "lint": "tsc --build --pretty && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "playwright test",
      "dependencies": [
        "../../examples/demo:build",
        "../../examples/demo:serve",
        "../snap:serve"
      ]
    }
  },
  "dependencies": {
    "filsnap": "workspace:^"
  },
  "devDependencies": {
    "@playwright/test": "^1.36.0",
    "@types/node": "^20.4.1",
    "metamask-testing-tools": "^1.1.1",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "rules": {
      "unicorn/no-null": "off",
      "jsdoc/require-returns": "off",
      "import/extensions": [
        "error",
        "never"
      ]
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignorePatterns": [
      "dist",
      ".wireit"
    ],
    "ignores": [
      "@types/*",
      "hd-scripts",
      "assert",
      "@metamask/snaps-cli",
      "playwright-test"
    ]
  }
}
