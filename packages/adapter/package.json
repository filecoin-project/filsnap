{
  "name": "filsnap-adapter",
  "type": "module",
  "version": "1.0.2",
  "description": "Adapter for installing Filsnap",
  "author": "Protocol Labs",
  "license": "(Apache-2.0 AND MIT)",
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git",
    "directory": "packages/adapter"
  },
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true",
    "build": "wireit",
    "test": "playwright test"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@metamask/approval-controller": "^7.0.2",
    "@metamask/snaps-sdk": "^6.3.0",
    "filsnap": "workspace:^",
    "iso-filecoin": "^4.1.0",
    "viem": "^2.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@types/node": "^22.5.2",
    "metamask-testing-tools": "^2.0.0",
    "typescript": "5.5.4"
  },
  "publishConfig": {
    "provenance": true
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignorePatterns": [
      "dist",
      ".wireit"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "@metamask/snaps-cli",
      "playwright-test",
      "@metamask/approval-controller"
    ]
  }
}
