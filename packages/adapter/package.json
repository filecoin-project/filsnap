{
  "name": "filsnap-adapter",
  "type": "module",
  "version": "2.1.0",
  "description": "Adapter for installing Filsnap",
  "author": "Protocol Labs",
  "license": "(Apache-2.0 AND MIT)",
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git",
    "directory": "packages/adapter"
  },
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp"
  ],
  "files": [
    "src",
    "dist/src/**/*.js",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true",
    "build": "wireit",
    "test": "pnpm run build && playwright test"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "iso-base": "^4.0.2"
  },
  "devDependencies": {
    "@metamask/approval-controller": "^7.1.3",
    "@metamask/snaps-sdk": "6.18.0",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.5",
    "filsnap": "workspace:*",
    "metamask-testing-tools": "^2.2.3",
    "type-fest": "^4.35.0",
    "typescript": "5.7.3",
    "viem": "^2.23.5"
  },
  "peerDependencies": {
    "iso-filecoin": "7.x"
  },
  "publishConfig": {
    "provenance": true
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignorePatterns": [
      "dist",
      ".wireit"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "@metamask/snaps-cli",
      "playwright-test",
      "@metamask/approval-controller"
    ]
  }
}
