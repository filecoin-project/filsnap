{
  "name": "filsnap",
  "version": "0.5.0",
  "description": "Filsnap - Metamask snap to interact with Filecoin dapps.",
  "license": "(Apache-2.0 AND MIT)",
  "author": "Protocol Labs",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git"
  },
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/snap",
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp",
    "wallet",
    "plugin",
    "fevm"
  ],
  "files": [
    "dist",
    "snap.manifest.json",
    "filecoin-logo.svg"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "lint": "tsc --build && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "playwright-test \"test/unit/**/*.test.ts\" --mode node",
    "test:e2e": "playwright test",
    "build": "wireit",
    "serve": "wireit"
  },
  "wireit": {
    "build": {
      "command": "rollup -c",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "rollup.config.js",
        "snap.manifest.json"
      ],
      "output": [
        "dist/snap.js"
      ]
    },
    "serve": {
      "command": "mm-snap serve",
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "service": true
    }
  },
  "dependencies": {
    "@metamask/key-tree": "^9.0.0",
    "@metamask/snaps-ui": "^1.0.1",
    "iso-base": "^1.1.2",
    "iso-filecoin": "^2.1.0",
    "merge-options": "^3.0.4",
    "viem": "^1.6.0",
    "zod": "^3.22.1"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "^1.0.1",
    "@metamask/snaps-rollup-plugin": "^1.0.1",
    "@metamask/snaps-types": "^1.0.1",
    "@playwright/test": "^1.37.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-sucrase": "^5.0.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-parentheses": "^0.0.2",
    "chai-subset": "^1.6.0",
    "metamask-testing-tools": "^1.1.5",
    "mocha": "^10.2.0",
    "playwright-test": "^12.1.1",
    "rollup": "^3.28.0",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "typescript": "5.1.6"
  },
  "publishConfig": {
    "provenance": true
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "rules": {
      "unicorn/no-null": "off",
      "jsdoc/require-returns": "off",
      "@typescript-eslint/no-base-to-string": "off",
      "import/extensions": [
        "error",
        "never"
      ]
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "out",
      "snap.config.cjs"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "hd-scripts",
      "assert",
      "@metamask/snaps-cli",
      "playwright-test",
      "mocha"
    ]
  }
}
