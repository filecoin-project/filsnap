{
  "name": "filsnap",
  "type": "module",
  "version": "1.3.0",
  "description": "Connect to Filecoin dapps using Metamask. Manage Filecoin accounts, send FIL to Native and FEVM accounts and enable FEVM transaction insights.",
  "author": "Protocol Labs",
  "license": "(Apache-2.0 AND MIT)",
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/snap",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git"
  },
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp",
    "wallet",
    "plugin",
    "fevm"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./filforwarder": {
      "types": "./dist/src/filforwarder.d.ts",
      "default": "./dist/src/filforwarder.js"
    }
  },
  "main": "dist/src/index.js",
  "typesVersions": {
    "*": {
      "filforwarder": [
        "./dist/src/filforwarder"
      ]
    }
  },
  "files": [
    "dist",
    "snap.manifest.json",
    "filecoin-logo.svg"
  ],
  "scripts": {
    "lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true",
    "test": "wireit",
    "build": "wireit",
    "serve": "wireit",
    "watch": "pnpm run serve & SNAP_ENV=test onchange -i -k 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' -- pnpm run test -- --headed -j 1 --timeout 0"
  },
  "wireit": {
    "build": {
      "command": "mm-snap build",
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.svg",
        "tsconfig.json",
        "snap.config.ts"
      ],
      "output": [
        "dist/snap.js",
        "snap.manifest.json"
      ],
      "clean": false,
      "env": {
        "SNAP_ENV": {"external": true }
      }
    },
    "test": {
      "command": "playwright test",
     
      "dependencies": [
        "build"
      ]
    },
    "serve": {
      "command": "mm-snap serve",
      "dependencies": [
        {
          "script": "build",
          "cascade": true
        }
      ],
      "service": true
    }
  },
  "dependencies": {
    "@metamask/key-tree": "^10.0.2",
    "@metamask/snaps-sdk": "^6.6.0",
    "@paulmillr/qr": "^0.3.0",
    "dequal": "^2.0.3",
    "iso-base": "^4.0.0",
    "iso-filecoin": "^6.0.0",
    "merge-options": "^3.0.4",
    "viem": "^2.21.59",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "6.5.1",
    "@playwright/test": "^1.48.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.4",
    "metamask-testing-tools": "^2.2.2",
    "onchange": "^7.1.0",
    "playwright-test": "^14.1.6",
    "type-fest": "^4.26.1",
    "typescript": "5.7.2"
  },
  "publishConfig": {
    "provenance": true
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@metamask/approval-controller",
      "@types/*",
      "assert",
      "playwright-test",
      "mocha"
    ]
  }
}
