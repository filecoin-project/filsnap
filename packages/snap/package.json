{
  "name": "filsnap",
  "type": "module",
  "version": "1.0.2",
  "description": "Connect to Filecoin dapps using Metamask. Manage Filecoin accounts, send FIL to Native and FEVM accounts and enable FEVM transaction insights.",
  "author": "Protocol Labs",
  "license": "(Apache-2.0 AND MIT)",
  "homepage": "https://github.com/filecoin-project/filsnap/tree/master/packages/snap",
  "repository": {
    "type": "git",
    "url": "https://github.com/filecoin-project/filsnap.git"
  },
  "bugs": {
    "url": "https://github.com/filecoin-project/filsnap/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "snap",
    "dapp",
    "wallet",
    "plugin",
    "fevm"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./filforwarder": {
      "types": "./dist/src/filforwarder.d.ts",
      "default": "./dist/src/filforwarder.js"
    }
  },
  "main": "dist/src/index.js",
  "typesVersions": {
    "*": {
      "filforwarder": [
        "./dist/src/filforwarder"
      ]
    }
  },
  "files": [
    "dist",
    "snap.manifest.json",
    "filecoin-logo.svg"
  ],
  "scripts": {
    "ts-build": "tsc --build",
    "lint": "tsc --build && eslint . && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "test": "playwright test",
    "build": "wireit",
    "serve": "wireit"
  },
  "wireit": {
    "build": {
      "command": "rollup -c",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "rollup.config.js",
        "snap.manifest.json"
      ],
      "output": [
        "dist/snap.js"
      ]
    },
    "serve": {
      "command": "sirv --port 8081",
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "service": true
    }
  },
  "dependencies": {
    "@metamask/key-tree": "^9.0.0",
    "@metamask/snaps-sdk": "^3.0.1",
    "iso-base": "^2.0.1",
    "iso-filecoin": "^4.0.3",
    "merge-options": "^3.0.4",
    "sirv-cli": "^2.0.2",
    "viem": "^1.16.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@metamask/snaps-rollup-plugin": "^3.0.0",
    "@playwright/test": "^1.42.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "metamask-testing-tools": "^1.2.1",
    "playwright-test": "^14.1.1",
    "rollup": "^4.12.0",
    "type-fest": "^4.12.0",
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "provenance": true
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "rules": {
      "unicorn/no-null": "off",
      "jsdoc/require-returns": "off",
      "@typescript-eslint/no-base-to-string": "off",
      "import/extensions": [
        "error",
        "never"
      ]
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "out",
      "snap.config.cjs",
      ".wireit"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "hd-scripts",
      "assert",
      "sirv-cli",
      "playwright-test",
      "mocha"
    ]
  }
}
