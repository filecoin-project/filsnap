{
  "name": "root",
  "private": true,
  "author": "Protocol Labs, Inc.",
  "license": "(Apache-2.0 AND MIT)",
  "packageManager": "pnpm@8.6.1",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "clean": "rm -rf docs node_modules pnpm-lock.yaml packages/*/{pnpm-lock.yaml,coverage,.nyc_output,dist,node_modules} examples/*/{pnpm-lock.yaml,coverage,.nyc_output,dist,node_modules}",
    "build": "pnpm -r --if-present run build",
    "lint": "pnpm -r --if-present run lint",
    "test": "pnpm -r --if-present run test",
    "docs": "typedoc --out docs --plugin typedoc-plugin-missing-exports"
  },
  "devDependencies": {
    "depcheck": "^1.4.3",
    "hd-scripts": "^7.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "3.0.0",
    "simple-git-hooks": "^2.8.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "5.1.6",
    "wireit": "^0.9.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,yml,json}": "prettier --write",
    "*.js": "eslint --fix"
  },
  "prettier": "hd-scripts/prettier.config.js"
}
